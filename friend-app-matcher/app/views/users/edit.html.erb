<div class="edit-user-container">
  <div class="edit-user-header">
    Personal details
  </div>
  <div class="edit-user-details">
    <div class="details-email">
      <label class="details-email-label">Email</label>
      <input readonly="readonly" 
             class="details-field"
             value='<%= @user.email %>'>
      </input>
    </div>
    <div class="details-uid">
      <label class="details-uid-label">UID</label>
      <input readonly="readonly"
             class="details-field"
             value='<%= @user.uid %>'>
      </input> 
    </div>
  </div>
  <div class="edit-user-areas">
    <%= link_to 'Edit friends', edit_friendships_path %>
    <%= link_to 'Delete account', '#', class: 'edit-user-delete-account',
                id: @user.id %>
    <div id='editUserDeleteDialog' title='Delete account?'>
      <p>Are you sure you want to delete your account?</p>
    </div>
  </div>
  <div class="edit-user-return">
    <%= link_to 'Back', @user %>
  </div>
</div>
