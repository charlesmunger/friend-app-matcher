<div class="service-view-rec-apps">
  <div class="rec-apps-container">
    <% if @page_left
         @left_link = recommendations_path(page: @page_left)
       end

       if @page_right
         @right_link = recommendations_path(page: @page_right)
       end
    %>
    <%= render partial: 'shared/table', 
               locals: { list_title: 'Recommended Applications',
                         list: @app_counts_display,
                         custom_actions: 'recommendations/ignore_table_actions',
                         pagination: 'recommendations/pagination', 
                         left_link: @left_link,
                         right_link: @right_link } %>
  </div>
  <script type='text/javascript' 
          language='javascript' 
          src='http://www.appbrain.com/api/api.nocache.js'>
  </script>
</div>
