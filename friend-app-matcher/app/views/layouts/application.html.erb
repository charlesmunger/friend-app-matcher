<!DOCTYPE html>
<html>
<head>
  <title>FriendAppMatcher</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="hbox">
    <h1>App Recommender</h1>
  </div>

  <div id="columns">

    <% if current_user %>
      <div id="side">

        <ul>
          <% 
            home_user_path = users_path + '/' + current_user.id.to_s
          %>
          <li><%= link_to 'My Account', home_user_path %></li>
          <li><%= link_to 'Recommendations', recommendations_path %></li>
          <li><%= link_to 'Top Applications', topapps_path %></li>
          <li><%= link_to 'Friends', friendships_path %></li>
        </ul>

        <%= button_to 'Logout', destroy_user_session_path, method: :delete %>

      </div>
    <% end %>

    <div id="main">
      <% if notice %>
          <p id="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
          <p id="alert"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>

  </div>

</body>
</html>
