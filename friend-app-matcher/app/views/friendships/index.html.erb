<div class="service-view-user-friends">
  <div class="friends-container">
    <% if @page_left
         @left_link = friendships_index_path(page: @page_left)
       end

       if @page_right
         @right_link = friendships_index_path(page: @page_right)
       end
    %>
    <%= render partial: 'shared/table', 
               locals: { list_title: 'Your Friends',
                         list: @friends,
                         custom_actions: 'friendships/ignore_table_actions',
                         pagination: 'friendships/pagination', 
                         left_link: @left_link,
                         right_link: @right_link } %>
  </div>
</div>
