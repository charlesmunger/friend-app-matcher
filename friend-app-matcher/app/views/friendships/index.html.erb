<h1>Listing friends</h1>

<table>
  <tr>
    <th>User</th>
    <th>Friend</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friends.each do |friend| %>
  <tr>
    <td><%= friend.username %></td>
    <td><%= link_to 'Show', friend %></td>
    <td><%= link_to 'Edit', edit_friendship_path(friend) %></td>
    <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div class="apple_pagination">
  <div class="page_info">
    <%= page_entries_info @friends, :model => 'friends' %>
  </div>
  <%= will_paginate @friends, :container => false %>
</div>

<%= link_to 'New Friendship', new_friendship_path %>
